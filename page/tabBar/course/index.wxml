<scroll-view class="page-scroll-view" scroll-y type="list">
  <van-cell-group>
    <van-cell wx:for="{{newList}}" wx:key="id" wx:for-item="item" title="{{item.title}}" value="{{item.date}}" bind:click="onClick" id="{{item.content}}" />
  </van-cell-group>
  <van-overlay show="{{ show }}" bind:click="onClickHide">
    <view class="wrapper">
      <view class="block" catch:tap="noop">
        {{content}}
      </view>
    </view>
  </van-overlay>
</scroll-view>