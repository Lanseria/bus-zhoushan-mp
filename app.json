{
  "themeLocation": "theme.json",
  "lazyCodeLoading": "requiredComponents",
  "pages": [
    "page/tabBar/home/index",
    "page/tabBar/busnews/index",
    "page/tabBar/gasonline/index"
  ],
  "preloadRule": {
    "page/tabBar/home/index": {
      "network": "all",
      "packages": [
        "page/home/"
      ]
    }
  },
  "resolveAlias": {
    "~/*": "/*"
  },
  "sitemapLocation": "sitemap.json",
  "subPackages": [
    {
      "pages": [
        "pages/route/index"
      ],
      "root": "page/home/"
    }
  ],
  "tabBar": {
    "color": "@tabBarColor",
    "selectedColor": "@tabBarSelectedColor",
    "borderStyle": "@tabBarBorderStyle",
    "backgroundColor": "@tabBarBackgroundColor",
    "list": [
      {
        "pagePath": "page/tabBar/home/index",
        "iconPath": "@iconPathBus",
        "selectedIconPath": "@selectedIconPathBus",
        "text": "公交查询"
      },
      {
        "pagePath": "page/tabBar/busnews/index",
        "iconPath": "@iconPathNewspaper",
        "selectedIconPath": "@selectedIconPathNewspaper",
        "text": "信息查询"
      },
      {
        "pagePath": "page/tabBar/gasonline/index",
        "iconPath": "@iconPathGasStation",
        "selectedIconPath": "@selectedIconPathGasStation",
        "text": "油价查询"
      }
    ]
  },
  "usingComponents": {
    "van-action-sheet": "@vant/weapp/action-sheet/index",
    "van-button": "@vant/weapp/button/index",
    "van-card": "@vant/weapp/card/index",
    "van-cell": "@vant/weapp/cell/index",
    "van-cell-group": "@vant/weapp/cell-group/index",
    "van-checkbox": "@vant/weapp/checkbox/index",
    "van-checkbox-group": "@vant/weapp/checkbox-group/index",
    "van-divider": "@vant/weapp/divider/index",
    "van-dropdown-item": "@vant/weapp/dropdown-item/index",
    "van-dropdown-menu": "@vant/weapp/dropdown-menu/index",
    "van-empty": "@vant/weapp/empty/index",
    "van-field": "@vant/weapp/field/index",
    "van-goods-action": "@vant/weapp/goods-action/index",
    "van-goods-action-button": "@vant/weapp/goods-action-button/index",
    "van-goods-action-icon": "@vant/weapp/goods-action-icon/index",
    "van-icon": "@vant/weapp/icon/index",
    "van-loading": "@vant/weapp/loading/index",
    "van-overlay": "@vant/weapp/overlay/index",
    "van-popup": "@vant/weapp/popup/index",
    "van-radio": "@vant/weapp/radio/index",
    "van-radio-group": "@vant/weapp/radio-group/index",
    "van-submit-bar": "@vant/weapp/submit-bar/index",
    "van-tab": "@vant/weapp/tab/index",
    "van-tabs": "@vant/weapp/tabs/index",
    "van-tag": "@vant/weapp/tag/index",
    "van-notify": "@vant/weapp/notify/index"
  },
  "resizable": false,
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "我的公查"
  }
}